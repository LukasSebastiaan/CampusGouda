{% extends 'base.html.twig' %}

{% block title %}CgUser{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12 col-lg-11 mx-auto">
                <h1>CgUser</h1>

                <table class="table">
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ cg_user.id }}</td>
                    </tr>
                    <tr>
                        <th>DateCreated</th>
                        <td>{{ cg_user.dateCreated ? cg_user.dateCreated|date('Y-m-d H:i:s T') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>{{ cg_user.email }}</td>
                    </tr>
                    <tr>
                        <th>Password</th>
                        <td>{{ cg_user.password }}</td>
                    </tr>
                    <tr>
                        <th>CgRole</th>
                        <td>{{ cg_user.cgRole }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ cg_user.Name }}</td>
                    </tr>
                    </tbody>
                </table>

                <a href="{{ path('cg_user_index') }}">back to list</a>

                <a href="{{ path('cg_user_edit', {'id': cg_user.id}) }}">edit</a>

                {{ include('cg_user/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
