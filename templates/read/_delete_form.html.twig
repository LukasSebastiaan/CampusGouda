<form method="post" action="{{ path('read_delete', {'id': read.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ read.id) }}">
    <button class="btn">Delete</button>
</form>
