{% extends 'base.html.twig' %}

{% block title %}Blog{% endblock %}

{% block body %}
    <div class="container">
        <h1>Blog</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ blog.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ blog.title }}</td>
            </tr>
            <tr>
                <th>Body</th>
                <td>{{ blog.body }}</td>
            </tr>
            <tr>
                <th>Img_path</th>
                <td>{{ vich_uploader_asset(blog, 'imageFile') }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ blog.author }}</td>
            </tr>
            </tbody>
        </table>

        <a href="{{ path('blog_index') }}" class="text-dark">back to list</a>

        <a href="{{ path('blog_edit', {'id': blog.id}) }}" class="text-dark">edit</a>

        {{ include('blog/_delete_form.html.twig') }}
    </div>

{% endblock %}
