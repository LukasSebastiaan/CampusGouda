{% extends 'base.html.twig' %}

{% block title %}Blog index{% endblock %}

{% block body %}
    <div class="container">
        <h1>Blog index</h1>

        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Frontpage</th>
                <th>Title</th>
                <th>Body</th>
                <th>Img_path</th>
{#
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
#}
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for blog in blogs %}
                <tr>
                    <td>{{ blog.id }}</td>
                    <td>{{ blog.front }}</td>
                    <td>{{ blog.title }}</td>
                    <td>{{ blog.body }}</td>
                    <td class="d-none d-md-block"><img src="{{ vich_uploader_asset(blog, 'imageFile') }}" alt="{{ blog.imageName }}"
                                                       style="height:50px;"/></td>
{#
                    <td>{{ blog.createdAt ? blog.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ blog.updatedAt ? blog.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
#}
                    <td>
                        <a href="{{ path('blog_show', {'id': blog.id}) }}" class="text-dark">show</a>
                        <a href="{{ path('blog_edit', {'id': blog.id}) }}" class="text-dark">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('blog_new') }}" class="text-dark">Create new</a>
    </div>

{% endblock %}
