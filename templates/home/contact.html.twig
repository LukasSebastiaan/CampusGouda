{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
    <div style="height: 150px" class="w-100"></div>
    <section id="contact">
        <div class="container">
            <div class="row">

                <div class="col-sm-12 col-lg--11">
                    <h3 class="text_title">Contact</h3>
                    <p>Je kunt met gemeente Gouda vrijblijvend contact opnemen.</p>
                </div>

                <div class="col-12 mx-auto">
                    <div class="messageBox">

                    </div>
                    <form asp-action="Index" asp-controller="Home" method="post" id="contactForm" name="sentMessage">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input asp-for="Email" type="text" name="Email" class="form-control" data-field="email" id="email" placeholder="E-mail *" required>
                                </div>
                                <div class="form-group">
                                    <input asp-for="Name" type="text" name="Name" class="form-control" data-field="naam" id="name" placeholder="Voor & Achter -Naam *" required>
                                </div>
                                <div class="form-group">
                                    <input asp-for="City" type="text" name="City" class="form-control" data-field="woonplaats" id="city" placeholder="Onderwerp *" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <textarea asp-for="Message"  class="form-control" id="message" data-field="textarea" placeholder="Bericht *"  minlength="10" required></textarea>
                                </div>
                            </div>

                            <div class="clearfix"></div>
                            <div class="col-lg-12 text-center">
                                <div id="success"></div>
                                <button id="sendMessageButton" class="btn btn-danger btn-xl text-uppercase" value="SendMessage" type="submit">Versturen</button>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </section>


  {% endblock %}
